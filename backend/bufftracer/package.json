{
  "name": "@bufferapp/bufftracer",
  "version": "0.1.0",
  "description": "A Datadog wrapper library to enable DD APM and tag API traces",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push . HEAD && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bufferapp/buffer-standards.git"
  },
  "homepage": "https://github.com/bufferapp/buffer-standards/backend/bufftracer",
  "keywords": [
    "buffer",
    "datadog apm",
    "graphql"
  ],
  "author": "Buffer engineering",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@bufferapp/bufflog": "0.3.1",
    "dd-trace": "1.4.1",
    "env-var": "7.0.1",
    "graphql": "15.6.0"
  }
}
